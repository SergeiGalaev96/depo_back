        <tr>
            <td style="width:60px;">
                Вид ЦБ:
            </td>
            <td style="width:205px;">
                @Model.base_type_name
            </td>
            <td style="width:60px;">
                ГРН ЦБ:
            </td>
            <td style="width:300px;">
                @Model.base_code
